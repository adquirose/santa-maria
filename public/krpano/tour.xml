<krpano version="1.18" title="Proyecto Santa María" onstart="startup();jscall(reactKrpano.onStart()">

	<include url="skin/vtourskin.xml" />
	<include url="skin/vistageneral.xml" />
	<include url="plugins/showtext.xml" />
    <include url="skin/hotspots-actions.xml" />
    <include url="skin/vtourskin_design_117.xml" />

	<!-- set skin settings: bingmaps? gyro? thumbnails? tooltips? -->
	<skin_settings maps="false"
	               maps_type="bing"
	               maps_bing_api_key=""
	               maps_zoombuttons="false"
	               gyro="true"
	               title="true"
	               thumbs="true"
	               thumbs_width="120" thumbs_height="55" thumbs_padding="10" thumbs_crop="0|40|240|160"
	               thumbs_opened="false"
	               thumbs_text="false"
	               thumbs_dragging="true"
	               thumbs_onhoverscrolling="false"
	               thumbs_scrollbuttons="false"
	               thumbs_scrollindicator="false"
	               thumbs_loop="false"
	               tooltips_thumbs="false"
	               tooltips_hotspots="false"
	               tooltips_mapspots="false"
	               loadscene_flags="MERGE"
	               loadscene_blend="BLEND(0.5)"
	               controlbar_offset="20"
	               />

	<!-- set optional skin logo url -->
	<style name="skin_hotspotstyle1"
        scale="0.5"
        zorder="50"
        handcursor="true"
        onhover="showtext(Disponible · Ver ficha);"
        alpha="1"
        type="text"
        edge="center"
        css="font-family:Din Alternate; font-size:21px; color:#000000;font-weight: bold; text-align:center;"
        vcenter="true"
        padding="5"
        bg="true"
        bgcolor="0xffffff"
        bgalpha="1.0"
        bgborder="0"
        bgroundedge="22"
        bgshadow=""
        txtshadow=""
        width="44" height="44"
    />

	<style name="spot-andrea" scale="0.4" zorder="50" edge="bottom" align="bottom" alpha="1"
        capture="false" handcursor="false"
	    fillcolor="0xffff00" fillalpha="0.30"
	    bordercolor="0xffff00" borderalpha="0.80"
	    onover="tween(alpha, 0.1, 0.25);"
	    onout="tween(alpha, 1.0, 0.25);"
	    ondown.touch="asyncloop(pressed, onhover(); );"
	    onup.touch="onout();"
    />
     
    <style name="skin_hotspotstyle4" scale="0.5" handcursor="false" edge="bottomleft" align="bottom" alpha="1"/>
  	<textstyle name="default"
		font="Helvetica" fontsize.no-mobile="14" fontsize.mobile="14" bold="false"
		background="true" backgroundcolor="0x211915" backgroundalpha="0.667"
		border="true" borderwidth="2" bordercolor="0xFFFFFF" roundedge="1"
		textcolor="0xFFFFFF"
		padding="6 10"
		textalign="center"
		yoffset.no-touch="-5"
		yoffset.touch="-40"
	/>

	<action name="startup">
		if(startscene === null, copy(startscene,scene[0].name));
		loadscene(get(startscene), null, MERGE);
	</action>


	<scene name="scene_master" title="Masterplan 360º" onstart="mostrar_btn_vistageneral(false);" thumburl="panos/master.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="2748.214" vlookat="26.845" fovtype="MFOV" fov="110.000" maxpixelzoom="2.0" fovmin="70" fovmax="130" limitview="range" hlookatmin="-180" hlookatmax="180" vlookatmin="-33" vlookatmax="90"/>

			<preview url="panos/master.tiles/preview.jpg" />
		<image>
			<cube url="panos/master.tiles/pano_%s.jpg" />
		</image>


		<!-- place your scene hotspots here -->
	
		<hotspot name="spot3" handcursor="false" style="spot-andrea" url="skin/spots/acceso.png" onhover="showtext(Acceso);" ath="106.106" atv="78.667"/>

		<hotspot name="hito1" style="skin_hotspotstyle4" url="skin/spots/1.png" ath="141.941" atv="0.741"/>
		<hotspot name="hito2" style="skin_hotspotstyle4" url="skin/spots/2.png" ath="-101.559" atv="-1.409"/>
		<hotspot name="hito3" style="skin_hotspotstyle4" url="skin/spots/3.png" ath="179.002" atv="0.200"/>
		<hotspot name="hito4" style="skin_hotspotstyle4" url="skin/spots/4.png" ath="-86.550" atv="-2.619"/>
		<hotspot name="hito5" style="skin_hotspotstyle4" url="skin/spots/5.png" ath="128.588" atv="0.496"/>
		<hotspot name="hito6" style="skin_hotspotstyle4" url="skin/spots/6.png" ath="103.700" atv="0.159"/>
		<hotspot name="hito7" style="skin_hotspotstyle4" url="skin/spots/7.png" ath="-137.754" atv="-0.333"/>
		<hotspot name="hito8" style="skin_hotspotstyle4" url="skin/spots/8.png" ath="-123.775" atv="-0.817"/>
		<hotspot name="hito9" style="skin_hotspotstyle4" url="skin/spots/9.png" ath="139.635" atv="0.436"/>
		<hotspot name="hito10" style="skin_hotspotstyle4" url="skin/spots/10.png" ath="152.973" atv="-0.025"/>
		<hotspot name="hito11" style="skin_hotspotstyle4" url="skin/spots/11.png" ath="-66.500" atv="-1.786"/>
		<hotspot name="hito12" style="skin_hotspotstyle4" url="skin/spots/12.png" ath="-113.449" atv="-1.622"/>
		<hotspot name="hito13" style="skin_hotspotstyle4" url="skin/spots/13.png" ath="-40.704" atv="-0.836"/>

	</scene>

	

	
	


<style name="animation-hotspot" url="skin/spots/spot0.png" crop="0|0|64|64" framewidth="64" frameheight="64" frame="0" lastframe="19" scale="0.8" onloaded="hotspot_animate();"/>
<action name="hotspot_animate"> inc(frame,1,get(lastframe),0); mul(ypos,frame,frameheight); txtadd(crop,'0|',get(ypos),'|',get(framewidth),'|',get(frameheight)); delayedcall(0.03, if(loaded, hotspot_animate() ) ); </action>


	




</krpano>
